using System;

namespace QuanLySinhVienUEH
{
    class Program
    {
        static void Main(string[] args)
        {
            // Vòng lặp vô hạn để chương trình luôn hiển thị menu
            while (true)
            {
                ShowMenu(); // Gọi hàm hiển thị menu

                Console.Write("\nChon mot tuy chon (1-6): "); // Nhập lựa chọn từ người dùng
                string choice = Console.ReadLine();

                // Kiểm tra lựa chọn của người dùng và gọi hàm tương ứng
                switch (choice)
                {
                    case "1":
                        ThemSinhVien(); // Gọi hàm thêm sinh viên
                        break;

                    case "2":
                        XoaSinhVien(); // Gọi hàm xóa sinh viên
                        break;

                    case "3":
                        SuaSinhVien(); // Gọi hàm sửa thông tin sinh viên
                        break;

                    case "4":
                        XemSinhVien(); // Gọi hàm tìm kiếm/xem thông tin sinh viên
                        break;

                    case "5":
                        XuatDanhSachHocBong(); // Xuất danh sách sinh viên xét học bổng
                        break;

                    case "6":
                        Console.Clear();
                        Console.WriteLine("Chuc ban hoc tot!");
                        Environment.Exit(0);
                        break;

                    default:
                        Console.WriteLine("Lua chon khong hop le, vui long thu lai!");
                        break;
                }

                // Chờ người dùng nhấn phím để quay lại menu
                Console.WriteLine("\nNhan phim bat ky de quay lai menu...");
                Console.ReadKey();
            }
        }

        // Hàm hiển thị menu
        static void ShowMenu()
        {
            Console.Clear(); // Xóa màn hình console để menu luôn được hiển thị mới
            Console.WriteLine("===============================================");
            Console.WriteLine("            QUAN LY SINH VIEN UEH"); // Tiêu đề menu
            Console.WriteLine("===============================================");
            Console.WriteLine("1. Them Sinh Vien"); // Lựa chọn 1: Thêm sinh viên
            Console.WriteLine("2. Xoa Sinh Vien"); // Lựa chọn 2: Xóa sinh viên
            Console.WriteLine("3. Sua Thong Tin Sinh Vien"); // Lựa chọn 3: Sửa thông tin
            Console.WriteLine("4. Tim Kiem/Xem Thong Tin Sinh Vien"); // Lựa chọn 4: Tìm kiếm/xem thông tin sinh viên (hiện đểm thang 10, chuyển sang thang 4)
            Console.WriteLine("5. Danh Sach Sinh Vien Xet Hoc Bong"); // Lựa chọn 5: Danh sách sinh viên xét học bổng (hiện sinh viên đủ điều kiện xét, cả được học bổng và không được học bổng)
            Console.WriteLine("6. Thoat Chuong Trinh");
            Console.WriteLine("===============================================");
        }

        // Hàm xử lý chức năng thêm sinh viên
        static void ThemSinhVien()
        {
            Console.Clear();
            Console.WriteLine(">>> Chuc nang Them Sinh Vien dang duoc cap nhat <<<");
        }

        // Hàm xử lý chức năng xóa sinh viên
        static void XoaSinhVien()
        {
            Console.Clear();
            Console.WriteLine(">>> Chuc nang Xoa Sinh Vien dang duoc cap nhat <<<");
        }

        // Hàm xử lý chức năng sửa thông tin sinh viên
        static void SuaSinhVien()
        {
            Console.Clear();
            Console.WriteLine(">>> Chuc nang Sua Thong Tin Sinh Vien dang duoc cap nhat <<<");
        }


        // Hàm xử lý chức năng tìm kiếm/xem thông tin sinh viên
        static void XemSinhVien()
        {
            Console.Clear();
            Console.WriteLine(">>> Chuc nang Tim Kiem/Xem Thong Tin Sinh Vien dang duoc cap nhat <<<");
        }

        // Hàm xử lý chức năng xuất danh sách sinh viên xét học bổng
        static void XuatDanhSachHocBong()
        {
            Console.Clear();
            Console.WriteLine(">>> Chuc nang Xuat Danh Sach Sinh Vien Xet Hoc Bong dang duoc cap nhat <<<");
        }
    }
}
